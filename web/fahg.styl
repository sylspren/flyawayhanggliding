body
  margin 0
  font-family Arial, Helvetica, Open Sans

$headerHeight = 60px

.sticky-header
  position fixed
  top 0
  width 100%
  height $headerHeight
  background white
  border-bottom 1px solid grey
  .nav
    position absolute
    right 0
    li
      display inline-block
      a
        text-decoration none

.hero-image
  text-align center
  background-image url("https://dl.dropboxusercontent.com/content_link/yYQzkNshVWQHupFYxpqFc83WCNzE0zM1oI9MMSFqUHxPTFSF3AteoQdta0FANZVi/file")
  background-repeat no-repeat
  background-size cover
  background-position-x center
  background-position-y center
  height 70vh
  box-sizing border-box
  padding-top 25vh
  margin-top $headerHeight
  .title,
  .subtitle
    color white

.content
  margin-right auto
  margin-left auto
  max-width 1280px
  +below(1280px)
    margin 0 40px
  +below(700px)
    margin 0 20px
  +below(500px)
    margin 0 10px
