body
  margin 0
  font-family Arial, Helvetica, Open Sans

$headerHeight = 60px

.sticky-header
  position fixed
  top 0
  width 100%
  height $headerHeight
  background white
  border-bottom 1px solid grey
  .contact
    position absolute
    left 0
    top 0
  .nav
    position absolute
    right 0
    a
      display inline-block
      text-decoration none
      img
        height 30px

.hero-image
  text-align center
  background-image url("/img/hero.jpg")
  background-repeat no-repeat
  background-size cover
  background-position-x center
  background-position-y center
  height 70vh
  box-sizing border-box
  padding-top 25vh
  margin-top $headerHeight
  .title,
  .subtitle
    color white

.content
  margin-right auto
  margin-left auto
  max-width 1280px
  +below(1280px)
    margin 0 40px
  +below(700px)
    margin 0 20px
  +below(500px)
    margin 0 10px
