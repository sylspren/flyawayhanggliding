$headerHeight = 60px

$alphaBlue = #44B6F5
$darkAlphaBlue = #031430
$black = #333

+below(575px)
  h3
    font-size 1rem
    margin-top 20px
  p
    font-size .9rem
  .row
    margin-bottom 40px

body
  background-color #f6f6f6
  color #666
h3, h4
  margin-bottom 25px
  color #444
h3
  font-size 1.9rem
p
  line-height 1.65rem

a
 text-decoration none
 color #444
 &:hover
   color $alphaBlue
   text-decoration none

.sticky-header
  min-height $headerHeight
  background white
  border-bottom 1px solid #ddd
  padding-left 25px
  br
    display none
  .navbar-item
    text-align right
    margin-left 25px
  .navbar-nav
    +above(992px)
      position absolute
      right 25px
  .navbar-toggler
    border none
  +below(575px)
    padding-left 8px
    padding-right 8px
    .navbar-toggler
      padding 0
    .navbar-brand
      font-size 14px
      margin-right 0px
      span
        display none
      br
        display initial

.hero-image
  background-image url("/img/hero.jpg")
  background-repeat no-repeat
  background-size cover
  background-position-x center
  background-position-y 18%
  height 70vh
  max-height 700px
  margin-top $headerHeight
  position relative
  .overlay
    position absolute
    top 0
    bottom 0
    width 100%
    background-color $darkAlphaBlue
    opacity 0.1
  .hero-image__content
    position absolute
    width 100%
    text-align center
    top 28%
    text-shadow 1px 1px 1px rgba(20, 20, 20, 1)
  .title,
  .subtitle
    color white
  .title
    font-size 70px
    +below(600px)
      font-size 28px
  .subtitle
    font-size 28px
    +below(600px)
      font-size 16px

.content
  margin 80px auto
  max-width 1100px
  margin-bottom 100px
  +below(1260px)
    margin 80px
  +below(700px)
    margin 40px
  +below(500px)
    margin 40px 20px

  .row
    margin-bottom 100px
    img.fullwidth,
    iframe
      width 100%
  a
    text-decoration underline
    color #666
    &:hover
      color $alphaBlue

.row.certifications
  margin-top 20px
  margin-bottom 0
  .caption
    font-size 14px
  .col-lg-6
    max-width 240px
    margin 0 auto

.sbsa-callout
  margin 0 auto
  display table
  img
    margin-right 15px
  p
    display table-cell
    vertical-align middle

.video-container
  max-width 320px
  margin auto
  margin-bottom 40px
  padding 0 20px

.video-thumbnail
  width 100%
  padding-top 100%
  border-radius 50%
  position relative
  background-position center
  background-size cover
  background-repeat no-repeat
  img
    position absolute
    width 70px
    height auto
    top 50%
    left 50%
    margin-top -25px
    margin-left -35px
  &.video-1
    background-image url("/img/flyingScreenshot.jpg")
  &.video-2
    background-image url("/img/bratScreenshot.png")
  &.video-3
    background-image url("/img/trainingScreenshot.jpg")



.footer
  text-align center
  background-color $darkAlphaBlue
  padding 40px 0 28px 0
  color white
  a
    color white
    &:hover
      color $alphaBlue
  div
    margin-bottom 12px
  .social-icons img
    height 26px
    margin-right 8px
  .logos img
    margin-right 8px
